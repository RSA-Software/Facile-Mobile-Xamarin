<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Cerca Articolo"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    x:Class="Facile.ArticoliSearch">

	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0,20,0,0">
        </OnPlatform>
    </ContentPage.Padding>

    <StackLayout>
        <SearchBar x:Name="searchBar" Placeholder="Cerca" TextChanged="OnTextChanged" IsVisible="true" />
        <syncfusion:SfListView x:Name="listView" AutoFitMode="Height" SelectionMode="Single" Padding="7,0,7,0" >
            <syncfusion:SfListView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding ana_desc1}" FontAttributes="Bold" HorizontalOptions="FillAndExpand" LineBreakMode="WordWrap"/>
                        <Label Text="{Binding ana_desc2}" TextColor="Gray" FontSize="13"/>
                        <Label Text="{Binding ana_codice}" TextColor="Gray" FontSize="13"/>
                        <BoxView HeightRequest="1" WidthRequest="1" Color="Silver"/>
                    </StackLayout>
                </DataTemplate>
            </syncfusion:SfListView.ItemTemplate>    
        </syncfusion:SfListView>
    </StackLayout>

</ContentPage>
