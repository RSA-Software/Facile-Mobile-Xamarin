<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Cerca Tipo Pagamento"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    x:Class="Facile.PagamentiBr">

    <StackLayout>
        <SearchBar Placeholder="Cerca" SearchButtonPressed="OnSearchButtonPressed" TextChanged="Handle_TextChanged" />
        <syncfusion:SfListView x:Name="listView" ItemSize="70" SelectionMode="Single" >
            <syncfusion:SfListView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding pag_desc}" FontAttributes="Bold" TextColor="Blue" FontSize="14" />
                        <Label Text="{Binding pag_codice}" TextColor="Gray" FontSize="13"/>
                    </StackLayout>
                </DataTemplate>
            </syncfusion:SfListView.ItemTemplate>    
        </syncfusion:SfListView>

    </StackLayout>
</ContentPage>
