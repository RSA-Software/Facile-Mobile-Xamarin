		<busyindicator:SfBusyIndicator x:Name="busyIndicator" AnimationType="Globe" Title="Attendere..." IsBusy="false" AbsoluteLayout.LayoutBounds="0.5,0.5,250,250" AbsoluteLayout.LayoutFlags="PositionProportional" TextColor="Black"/>
